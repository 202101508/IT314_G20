<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Student record</title>
    <link rel="stylesheet" href="../../styles/admin/student_record.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Yatra+One&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200">
</head>
<body>
    
    <%- include("../partials/side_navbar_admin.ejs") %>

    <section class="all_section">
        <div class="qwerty">
            Student Details
        </div>

        <div class="container">
            <div class="text">
            <h2>Student Log</h2>
        </div>
        <div class="previous-requests">
            <table border="1">
                <thead>
                    <tr>
                        <th class="th_0">ID</th>
                        <th class="th_1">Name</th>
                        <th class="th_2">Room number</th>
                        <th class="t_3">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% if(locals.students){ %>
                        <% students.forEach(entry => { %>
                            <% if(entry.isAdmin !== "on"){ %>
                                <% const student = entry.studDetails %>
                                <tr>
                                    <td><%= student.student_id %></td>
                                    <td><%= student.student_name %></td>
                                    <td><%= student.room_no %></td>
                                    <td>
                                        <a href="/admin/<%= username %>/students_profile/<%= entry._id %>">More</a>
                                        or 
                                        <a href="/admin/<%= username %>/remove-student/<%= entry._id %>" class="remove-button">Remove</a>

                                    </td>
                                </tr>
                           <% } %>
                            
                        <% }); %>
                    <% } %>
                    
                </tbody>
            </table>
        </div>
    </section>

    <div class="container2">
        <div class="new-request">
            <form action="/admin/<%= username %>/new_student">
                <button type="submit">Add Student</button>
            </form>
        </div>
    </div>
</div>
</body>
</html>
