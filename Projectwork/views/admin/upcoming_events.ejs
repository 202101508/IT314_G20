<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta
			name="viewport"
			content="width=device-width, initial-scale=1.0" />
		<title>Upcoming Events</title>
		<link
			rel="stylesheet"
			href="../../styles/admin/upcoming_events.css" />
		<link
			rel="preconnect"
			href="https://fonts.googleapis.com" />
		<link
			rel="preconnect"
			href="https://fonts.gstatic.com"
			crossorigin />
		<link
			rel="stylesheet"
			href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css"
			integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA=="
			crossorigin="anonymous"
			referrerpolicy="no-referrer" />
		<link
			href="https://fonts.googleapis.com/css2?family=Yatra+One&display=swap"
			rel="stylesheet" />
		<link
			rel="stylesheet"
			href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
	</head>
	<body>
		<%- include("../partials/side_navbar_admin.ejs") %>

		<section class="all_section">
			<div class="qwerty">Upcoming Events</div>

			<div class="container">
				<div class="text">
					<% if(locals.events){ %> <% events.forEach(event => { %>
					<div class="event">
						<h2><%= event.title %></h2>
						<p><%= event.description %></p>
						<p>
							Timestamp: <%= event.timestamp.toISOString().split('T')[0] %> <%=
							event.timestamp.toISOString().split('T')[1].slice(0, 5) %>
						</p>
					</div>
					<% }); %> <% } %>
				</div>
			</div>

			<div class="container2">
				<div class="new-request">
					<!-- <h2 >Upload Event</h2> -->
					<button id="open-popup-request">add event</button>
				</div>
			</div>

			<div
				id="popup"
				class="popup">
				<div class="popup-content">
					<span
						id="close-popup"
						class="close"
						>&times;</span
					>
					<h2>Add Upcoming Event</h2>
					<form
						action="/admin/<%= username %>/add-event"
						method="post">
						<label for="eventTitle">Title:</label>
						<textarea
							id="eventTitle"
							name="title"
							rows="2"
							required></textarea
						><br />

						<label for="eventDescription">Description:</label>
						<textarea
							id="eventDescription"
							name="description"
							rows="4"
							required></textarea
						><br />

						<label for="eventTimestamp">Timestamp:</label>
						<input
							type="datetime-local"
							id="eventTimestamp"
							name="timestamp"
							required /><br />

						<button type="submit">Publish Event</button>
					</form>
				</div>
			</div>

			<script>
				document
					.getElementById("open-popup-request")
					.addEventListener("click", function () {
						document.getElementById("popup").style.display = "block";
					});

				document
					.getElementById("close-popup")
					.addEventListener("click", function () {
						document.getElementById("popup").style.display = "none";
					});
			</script>
		</section>
	</body>
</html>
